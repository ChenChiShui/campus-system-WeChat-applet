/* 排序按钮区域 */
.sort-buttons {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  padding: 0 20rpx; /* 增加左右内边距，使按钮不紧贴屏幕边缘 */
}

/* 通用按钮样式 */
.sort-button {
  flex: 1;
  padding: 20rpx; /* 加大点击区域 */
  font-size: 30rpx; /* 增大字体，确保按钮文字清晰 */
  border-radius: 50rpx; /* 圆角按钮，增强视觉美感 */
  background: linear-gradient(135deg, #f5f5f5, #e0e0e0); /* 渐变背景，提升层次感 */
  color: #333;
  text-align: center;
  margin-right: 20rpx; /* 按钮之间增加间距 */
  box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.1); /* 添加轻微阴影，增强立体感 */
  transition: all 0.3s ease; /* 点击状态和悬停状态的平滑过渡 */
}

/* 移除最后一个按钮的右边距，避免超出 */
.sort-button:last-child {
  margin-right: 0;
}

/* 激活状态按钮样式 */
.sort-button.active {
  background: linear-gradient(135deg, #ff7e5f, #ff4c4c); /* 使用更鲜艳的渐变色 */
  color: #fff; /* 激活状态下，文字颜色为白色 */
  box-shadow: 0 5rpx 15rpx rgba(255, 76, 76, 0.3); /* 激活状态下的阴影颜色变化 */
  transform: translateY(-2rpx); /* 激活状态按钮稍微抬高，增强点击感 */
}

/* 悬停或点击状态（模拟悬停效果） */
.sort-button:active {
  transform: scale(0.98); /* 点击时按钮轻微缩小 */
  box-shadow: 0 3rpx 10rpx rgba(0, 0, 0, 0.2); /* 点击时阴影变化 */
}

/* 按钮文字的居中和字体优化 */
.sort-button text {
  font-weight: 500; /* 文字稍微加粗，增强可读性 */
}
/* 自定义内容区域 */
.custom-content {
  padding: 20rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 3rpx 15rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
}

/* 图片样式 */
.custom-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  object-fit: cover;
}

/* 详情区域，包含标题、薪资、日期等 */
.custom-details {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex: 1; /* 让其占满剩余空间 */
}

/* 职位标题样式 */
.custom-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

/* 薪资信息样式 */
.custom-salary {
  font-size: 28rpx;
  color: #ff4c4c;
  font-weight: 500;
  margin-bottom: 10rpx;
  display: block;
  box-sizing: border-box;
}

/* 发布日期样式 */
.custom-date {
  font-size: 24rpx;
  color: #888;
  font-weight: normal;
  margin-top: 10rpx;
}

/* 标签容器 */
.custom-tags {
  margin-left: auto; /* 将标签推到右侧 */
  display: flex;
  align-items: center;
}

/* 自定义 van-tag 的样式 */
.custom-tag {
  padding: 8rpx 16rpx;
  font-size: 12rpx;
  border-radius: 12rpx;
}