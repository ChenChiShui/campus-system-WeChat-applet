<view class="detail-container">
  <!-- 头部显示职位和时间 -->
  <view class="head">
    <view class="head-left">
      <view class="head-title">{{info.title}}</view>
      <view class="head-time">{{time}}</view>
    </view>
    <view class="head-right">{{info.salary}}</view>
  </view>
  
  <!-- 联系信息 -->
  <view class="call">联系手机：{{info.phone}}</view>
  <view class="address">联系地址：{{info.address}}</view>
  <view class="context">{{info.context}}</view>

  <!-- 图片展示区域 -->
  <view class="image-preview">
    <block wx:for="{{images}}" wx:key="index">
      <image src="{{item}}" mode="aspectFill" class="job-image" bindtap="handleImagePreview" data-url="{{item}}"></image>
    </block>
  </view>

  <!-- 我要报名按钮 -->
  <button class="btn" type="primary" bindtap="join">我要报名</button>
  <!-- 弹窗选择简历 -->
  <van-popup show="{{ show }}" bind:close="onCancel" position="bottom" custom-style="height: 50%;">
    <van-picker
      show-toolbar
      title="选择简历"
      bind:cancel="onCancel"
      bind:confirm="onConfirm"
      columns="{{ title }}" 
      default-index="{{0}}"
      bind:change="onChange"
    />
  </van-popup>
  <!-- 我要联系按钮 -->
  <button class="btn-contact" type="primary" bindtap="showContactDialog">我要联系</button>

  <!-- 联系方式弹窗 -->
  <van-dialog
    show="{{contactDialogShow}}"
    title="联系我们"
    show-cancel-button
    confirm-button-text="拨打电话"
    cancel-button-text="取消"
    bind:confirm="makePhoneCall"
    bind:cancel="closeContactDialog"
  >
    <view>联系电话：{{info.phone}}</view>
    <view>联系地址：{{info.address}}</view>
  </van-dialog>
</view>