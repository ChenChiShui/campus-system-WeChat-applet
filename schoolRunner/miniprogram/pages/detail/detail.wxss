.detail-container {
  background: #fbfae1;
  height: 100vh;
}

.btn {
  position: fixed;
  bottom: 0;
  width: 100%;
}

.call, .address {
  color: #64a36f;
  margin: 20rpx 20rpx;
  font-size: 24rpx;
}

.context {
  line-height: 70rpx;
  margin: 20rpx 20rpx;
  word-wrap: break-word;
}

.head {
  display: grid;
  grid-template-rows: 100rpx;
  grid-template-columns: 80% 20%;
  align-items: center;
  border-bottom: 1rpx solid #e6f3de;
  padding: 20rpx 30rpx;
}

.head-title {
  font-size: 32rpx;
  width: 500rpx;
  word-wrap: break-word;
  max-height: 100rpx;
  overflow: hidden;
}

.head-time {
  font-size: 26rpx;
  color: #888;
  margin-top: 10rpx;
}

.head-right {
  color: #ffe121;
}

/* 图片展示样式 */
.image-preview {
  margin: 20rpx;
  display: flex;
  flex-wrap: wrap;
}

.job-image {
  width: 200rpx;
  height: 200rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  object-fit: cover;
  border-radius: 10rpx;
  /* 调试边框 */
  border: 1px solid red;
}
/* 我要联系按钮的样式 */
.btn-contact {
  position: fixed;
  bottom: 100rpx;  /* 保证与我要报名按钮有一定间距 */
  width: 100%;
  background-color: #ff6f61;
  color: #fff;
  font-size: 36rpx;
  padding: 10rpx 0;
  text-align: center;
  border: none;
}