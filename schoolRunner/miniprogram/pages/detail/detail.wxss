/* 整体背景颜色 */
.detail-container {
  background-color: #f4f4f4; /* 淡灰色背景 */
  padding-bottom: 160rpx;
  min-height: 100vh;
}

/* 头部样式 */
.head {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background: linear-gradient(135deg, #a8e063, #56ab2f); /* 渐变背景 */
  border-radius: 12rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1); /* 圆角和阴影 */
  margin: 20rpx 30rpx;
}

.head-title {
  font-size: 44rpx;
  font-weight: bold;
  color: #fff;
  max-width: 600rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.head-time {
  font-size: 28rpx;
  color: #f0f0f0;
  margin-top: 10rpx;
}

.head-right {
  font-size: 40rpx;
  color: #ff6f61;
  font-weight: bold;
  background-color: rgba(255, 255, 255, 0.15);
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
}

/* 信息块样式 */
.info-card {
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.05); /* 卡片阴影 */
  margin: 20rpx 30rpx;
  padding: 20rpx;
}

.call, .address {
  display: flex;
  align-items: center;
  font-size: 30rpx;  /* 保持原来的字体大小 */
  color: #444;       /* 调整为稍微深一点的灰色 */
  background-color: #f9f9f9;  /* 修改背景为淡灰色 */
  margin-bottom: 20rpx;
  padding: 20rpx 60rpx;  /* 增大左右 padding */
  border-radius: 12rpx;   /* 添加轻微圆角 */
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);  /* 添加轻微阴影 */
}

.call .info-icon, .address .info-icon {
  width: 40rpx;     /* 保持图标宽度 */
  height: 40rpx;    /* 保持图标高度 */
  margin-right: 20rpx;  /* 保持图标与文字的间距 */
}

.call-text, .address-text {
  flex-grow: 1;     /* 文本占据剩余空间 */
  font-size: 30rpx; /* 保持字体大小 */
  color: #333;      /* 调整为默认文字颜色 */
}
.info-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

/* 职位描述块 */
.context-card {
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.05); /* 卡片阴影 */
  margin: 40rpx 30rpx;
  padding: 40rpx;
  flex-grow: 1;  
}

.context {
  line-height: 68rpx;
  font-size: 30rpx;
  color: #666;
  word-wrap: break-word;
  white-space: pre-line;
  margin: 40rpx 30rpx;
}

/* 图片展示区域 */
.image-preview {
  margin: 20rpx 30rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.job-image {
  width: calc(33.33% - 10rpx);
  height: 200rpx;
  margin-bottom: 10rpx;
  object-fit: cover;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.job-image:hover {
  transform: scale(1.05); /* 悬浮时放大 */
  box-shadow: 0 6rpx 14rpx rgba(0, 0, 0, 0.15); /* 悬浮时阴影加深 */
}

/* 三个按钮区域，固定在页面底部 */
.button-group {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  display: flex;
  justify-content: space-between;
  padding: 15rpx 30rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
  z-index: 1000;
}

/* 按钮基础样式 */
button {
  flex: 1;
  font-size: 36rpx;
  padding: 20rpx;
  text-align: center;
  margin: 0 10rpx;
  border-radius: 30rpx;
  border: none;
  color: #fff;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}

button:last-child {
  margin-right: 0;
}

/* 我要报名按钮样式 */
.btn-primary {
  background: linear-gradient(135deg, #f6d365 0%, #fda085 100%);
}

.btn-primary:active {
  background: linear-gradient(135deg, #fda085 0%, #f6d365 100%);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

/* 在线联系按钮样式 */
.btn-secondary {
  background: linear-gradient(135deg, #a1c4fd 0%, #c2e9fb 100%);
}

.btn-secondary:active {
  background: linear-gradient(135deg, #c2e9fb 0%, #a1c4fd 100%);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

/* 拨打电话按钮样式 */
.btn-tertiary {
  background: linear-gradient(135deg, #84fab0 0%, #8fd3f4 100%);
}

.btn-tertiary:active {
  background: linear-gradient(135deg, #8fd3f4 0%, #84fab0 100%);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}