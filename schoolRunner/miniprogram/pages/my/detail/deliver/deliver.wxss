/* 标题部分的样式 */
.cell-item .van-cell__title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin: 0;
}

/* 描述部分的样式 */
.cell-item .van-cell__label {
  font-size: 28rpx;
  color: #888;
  margin-top: 10rpx;
}

/* 日期部分的样式 */
.cell-item .van-cell__value {
  font-size: 28rpx;
  color: #07c160;
  text-align: right;
  margin-left: auto;
}

/* 列表项之间的间距 */
.van-cell-group {
  margin-top: 30rpx;
  padding-left: 0;
  padding-right: 0;
}

/* 移除 van-cell 的边框 */
.van-cell {
  border-bottom: none !important;
}

.van-cell__title, .van-cell__label, .van-cell__value {
  margin: 0;
}