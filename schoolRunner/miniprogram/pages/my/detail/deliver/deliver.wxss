.page {
  background-color: #f4f4f4;
  padding-bottom: 30rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
}


/* 列表项的样式 */
.cell-item {
  background-color: white;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

/* 简历状态的样式 */
.resume-status {
  color: #888;
  font-size: 28rpx;
  margin-top: 10rpx;
}

/* 跳转按钮的样式 */
.job-detail-button {
  font-size: 28rpx;
  color: #fff;
